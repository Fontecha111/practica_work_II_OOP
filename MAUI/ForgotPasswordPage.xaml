<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.ForgotPasswordPage"
             Title="Forgot Password"
             BackgroundColor="White">

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

        <Label Text="Password Recovery"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="Black" />

        <Label Text="Enter your email address to recover your password:" />
        <Entry x:Name="emailEntry" Placeholder="Email" TextColor="Black" Keyboard="Email" />

        <Button Text="Send Recovery Email"
                BackgroundColor="#FF66C7FF"
                TextColor="White"
                Clicked="OnSendRecoveryClicked" />

        <Button Text="Back to Login"
                Clicked="OnBackToLoginClicked"
                BackgroundColor="LightGray"
                TextColor="Black" />

    </VerticalStackLayout>
</ContentPage>
